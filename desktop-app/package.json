{
  "name": "visual-fp-desktop-app",
  "version": "1.0.0",
  "description": "VisualFP electron app",
  "main": "./dist/main.js",
  "license": "MIT",
  "author": "Lukas Streckeisen & Jann Flepp",
  "scripts": {
    "build": "tsc",
    "watch": "nodemon --exec yarn serve:electron",
    "start": "concurrently -k \"yarn serve:frontend\" \"yarn watch\"",
    "frontend:setup": "cd frontend && yarn",
    "electron:setup": "yarn",
    "setup": "yarn frontend:setup && yarn electron:setup",
    "serve:frontend": "cd frontend && yarn dev",
    "serve:electron": "set APP_IS_DEV=yes && yarn build && wait-on tcp:3000 && electron .",
    "build:frontend": "cd frontend && yarn build",
    "build:electron": "yarn build",
    "app:build": "yarn build:frontend && yarn build:electron"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^27.0.2",
    "electron-devtools-installer": "^3.2.0",
    "json": "^11.0.0",
    "nodemon": "^3.0.1",
    "typescript": "^5.2.2",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "electron-log": "^4.4.8"
  }
}
